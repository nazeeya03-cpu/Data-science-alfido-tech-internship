
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from wordcloud import WordCloud

df = pd.read_csv('instagram_data.csv')

df['Date'] = pd.to_datetime(df['Date'])

df['Engagement Rate'] = (df['Likes'] + df['Comments']) / df['Followers'] * 100

print("Total Posts:", len(df))
print("Average Likes:", df['Likes'].mean())
print("Average Comments:", df['Comments'].mean())

plt.figure(figsize=(10,5))
df.groupby(df['Date'].dt.to_period('M'))['Engagement Rate'].mean().plot()
plt.title('Average Engagement Rate Over Time')
plt.ylabel('Engagement Rate (%)')
plt.xlabel('Month')
plt.show()

top_posts = df.sort_values('Engagement Rate', ascending=False).head(10)
plt.figure(figsize=(8,5))
sns.barplot(x='Engagement Rate', y='Post_ID', data=top_posts)
plt.title('Top 10 Posts by Engagement Rate')
plt.show()

hashtags = " ".join(df['Hashtags'].dropna().astype(str))
wordcloud = WordCloud(width=800, height=400, background_color='white').generate(hashtags)
plt.figure(figsize=(10,5))
plt.imshow(wordcloud, interpolation='bilinear')
plt.axis('off')
plt.title('Most Common Hashtags')
plt.show()
